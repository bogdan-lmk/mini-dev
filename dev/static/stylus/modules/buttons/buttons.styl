.btn
 border: none

.btn--learn-more
  position relative
  padding: 15px 35px;
  background lightOrangeColor
  color whiteColor
  text-transform uppercase
  font-family mainFont
  font-size rem(15px)
  overflow hidden
  margin-top 50px
  z-index 11
  &:before,&:after
    content: ''
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index -1
    display flex
  &:before
    right:-50px
    border-right: 50px solid transparent;
    border-bottom: 50px solid whiteColor;
    transform: translateX(-100%);
  &:after
    left:-50px
    border-left: 50px solid transparent;
    border-top: 50px solid whiteColor;
    transform: translateX(100%);
  &:hover&:before
     transform: translateX(-49%)
     transition: 0.5s ease-in-out
  &:hover&:after
    transform: translateX(49%)
    transition: 0.5s ease-in-out
  &:hover
    color: blackColor
    cursor pointer
    transition: 0.5s ease-in-out


